<h1>Sign up</h1>

<div>
  <div>
    <%= form_for @user, url: {action: "create"} do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email%>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :lastname %>
      <%= f.text_field :lastname %>

      <%= f.label :password %>
      <%= f.password_field :password%>

      <%= f.submit "Create my account" %>
    <% end %>
  </div>
</div>
