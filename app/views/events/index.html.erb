<h1>All Events</h1>
<h2>Upcoming Events</h2>
<% Event.upcoming.each do |e| %>
<div>  
   <%= link_to e.description, e  %>
   <% if logged_in? && accepted_invitation?(e) %>
   <%= link_to "Accept invitation", e %>
   <% end %>
</div>
<% end %>

<h2>Past Events</h2>
<% Event.past.each do |e| %>
<div>  

<%= link_to e.description, e  %>
</div>
<% end %>