
<h1>Description: <%= @event.description %></h1>
<h2>Creator: <%= creator_name @event.id %></h2>
<h3> Attendees </h3>
<div>
   <% @event.attendees.each do |e| %>
    <p>
       <%= e.name %> <%=e.lastname %>
    </p>
    <% end %>
 </div>
<% if is_creator? %>
<%= link_to "Invite People", new_invitation_path %>
<% elsif logged_in? && accepted_invitation?(@event)%>

<%= link_to "Accept Invitation", new_user_attended_event_path %>
<% end %>